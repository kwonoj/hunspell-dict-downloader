{
  "name": "hunspell-dict-downloader",
  "version": "0.0.1",
  "description": "",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "engines": {
    "npm": ">=3.0.0",
    "node": ">=4.2.4"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write --single-quote --print-width 120 --jsx-bracket-same-line true",
      "tslint --fix",
      "git add"
    ]
  },
  "scripts": {
    "prepublish": "npm prune && npm run build",
    "precommit": "lint-staged",
    "prepush": "npm-run-all build test",
    "commitmsg": "commitlint -e",
    "manifest": "ts-node generate-manifest.ts",
    "test": "jest --config jest.json --coverage",
    "lint": "tslint --type-check -c tslint.json -p tsconfig.json \"src/**/*.ts\" \"spec/**/*.ts\"",
    "lint:staged": "lint-staged",
    "build": "npm-run-all build:clean && tsc",
    "build:clean": "shx rm -rf ./dist",
    "commit": "git-cz -S",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kwonoj/hunspell-dict-downloader.git"
  },
  "author": "OJ Kwon <kwon.ohjoong@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kwonoj/hunspell-dict-downloader/issues"
  },
  "homepage": "https://github.com/kwonoj/hunspell-dict-downloader#readme",
  "dependencies": {
    "md5-file": "^3.2.3",
    "pacote": "^6.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^3.2.0",
    "@commitlint/config-angular": "^3.1.1",
    "@types/chai": "^4.0.4",
    "@types/jest": "^21.1.1",
    "@types/node": "^8.0.31",
    "@types/shelljs": "^0.7.4",
    "@types/voca": "^1.3.0",
    "chai": "^4.1.2",
    "commitizen": "^2.9.6",
    "conventional-changelog-cli": "^1.3.3",
    "cz-conventional-changelog": "^2.0.0",
    "husky": "^0.14.3",
    "jest": "^21.2.0",
    "lint-staged": "^4.2.3",
    "npm-run-all": "^4.1.1",
    "prettier": "^1.7.0",
    "shelljs": "^0.7.8",
    "shx": "^0.2.2",
    "ts-jest": "^21.0.1",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "tslint-no-unused-expression-chai": "0.0.2",
    "typescript": "^2.5.3",
    "voca": "^1.3.0"
  }
}
