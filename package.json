{
  "name": "hunspell-dict-downloader",
  "version": "1.0.0",
  "description": "Hunspell based dictionary downloader for node.js",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "engines": {
    "npm": ">=3.0.0",
    "node": ">=4.2.4"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write --single-quote --print-width 120 --jsx-bracket-same-line true",
      "tslint --fix",
      "git add"
    ]
  },
  "scripts": {
    "prepublishOnly": "npm prune && npm run build",
    "precommit": "lint-staged",
    "prepush": "npm-run-all build test",
    "commitmsg": "commitlint -e",
    "manifest:generate": "cross-env TS_NODE_TYPE_CHECK=true node -r ts-node/register generate-manifest.ts",
    "manifest:validate": "cross-env TS_NODE_TYPE_CHECK=true node -r ts-node/register validate-manifest.ts",
    "test": "jest --config jest.json --coverage",
    "lint": "tslint -c tslint.json -p tsconfig.json \"src/**/*.ts\" \"spec/**/*.ts\"",
    "lint:staged": "lint-staged",
    "build": "npm-run-all build:clean && tsc",
    "build:clean": "shx rm -rf ./dist",
    "commit": "git-cz -S",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kwonoj/hunspell-dict-downloader.git"
  },
  "author": "OJ Kwon <kwon.ohjoong@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kwonoj/hunspell-dict-downloader/issues"
  },
  "homepage": "https://github.com/kwonoj/hunspell-dict-downloader#readme",
  "dependencies": {
    "fs-extra": "^7.0.0",
    "lodash.includes": "^4.3.0",
    "md5-file": "^4.0.0",
    "pacote": "^8.1.6",
    "pify": "^3.0.0",
    "tslib": "^1.9.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-angular": "^7.0.1",
    "@types/chai": "^4.1.3",
    "@types/fs-extra": "^5.0.3",
    "@types/iso-3166-2": "^0.6.0",
    "@types/jest": "^23.0.2",
    "@types/node": "^10.3.2",
    "@types/pify": "^3.0.2",
    "@types/shelljs": "^0.8.0",
    "@types/voca": "^1.4.0",
    "chai": "^4.1.2",
    "cjs-iso-639": "^1.0.2",
    "commitizen": "^2.10.1",
    "conventional-changelog-cli": "^2.0.1",
    "cross-env": "^5.1.6",
    "cz-conventional-changelog": "^2.0.0",
    "husky": "^0.14.3",
    "iso-3166-2": "^1.0.0",
    "jest": "^23.1.0",
    "lint-staged": "^7.2.0",
    "locale2": "^2.2.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.13.5",
    "shelljs": "^0.8.2",
    "shx": "^0.3.0",
    "ts-jest": "^23.0.0",
    "ts-node": "^6.1.1",
    "tslint": "^5.10.0",
    "tslint-no-unused-expression-chai": "0.1.3",
    "typescript": "^2.9.1",
    "voca": "^1.4.0"
  }
}
